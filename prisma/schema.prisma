generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum ConsentType {
  TERMS_OF_SERVICE
  PRIVACY_POLICY

  @@map("consent_type")
}

enum ScheduleStatus {
  DRAFT
  ACTIVE
  COMPLETED
  CANCELED

  @@map("schedule_status")
}

enum Season {
  SPRING
  SUMMER
  FALL
  WINTER

  @@map("season")
}

enum Gender {
  MALE
  FEMALE

  @@map("gender")
}

enum Role {
  ADMIN
  USER

  @@map("role")
}

model User {
  uuid          String @id
  name          String
  email         String @unique
  phoneNumber   String @map("phone_number")
  studentNumber String @map("student_number")
  role          Role   @default(USER)

  deletedAt DateTime? @map("deleted_at")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  userRefreshTokens      UserRefreshToken[]
  userConsents           UserConsent[]
  inspectionApplications InspectionApplication[]
  auditLogs              AuditLog[]

  @@map("user")
}

model UserRefreshToken {
  uuid         String   @id @default(uuid())
  userUuid     String   @map("user_uuid")
  refreshToken String   @unique @map("refresh_token")
  sessionId    String   @map("session_id")
  createdAt    DateTime @default(now()) @map("created_at")
  expiredAt    DateTime @map("expired_at")

  user User @relation(fields: [userUuid], references: [uuid], onDelete: Cascade)

  @@index([userUuid, sessionId])
  @@map("user_refresh_token")
}

model UserConsent {
  uuid        String      @id @default(uuid())
  userUuid    String      @map("user_uuid")
  consentType ConsentType @map("consent_type")
  version     String
  agreedAt    DateTime    @default(now()) @map("agreed_at")

  user User @relation(fields: [userUuid], references: [uuid], onDelete: Cascade)

  @@index([userUuid, consentType])
  @@map("user_consent")
}

model AuditLog {
  uuid        String   @id @default(uuid())
  action      String
  data        String
  userUuid    String   @map("user_uuid")
  performedAt DateTime @default(now()) @map("performed_at")

  user User @relation(fields: [userUuid], references: [uuid])

  @@index([performedAt])
  @@map("audit_log")
}

model MoveOutSchedule {
  uuid                 String           @id @default(uuid())
  title                String
  applicationStartTime DateTime         @map("application_start_time")
  applicationEndTime   DateTime         @map("application_end_time")
  currentSemesterUuid  String           @map("current_semester_uuid")
  nextSemesterUuid     String           @map("next_semester_uuid")
  createdAt            DateTime         @default(now()) @map("created_at")
  updatedAt            DateTime         @default(now()) @updatedAt @map("updated_at")
  inspectionSlots      InspectionSlot[]
  status               ScheduleStatus   @default(DRAFT)

  currentSemester Semester @relation("ScheduleCurrentSemester", fields: [currentSemesterUuid], references: [uuid], onDelete: Cascade)
  nextSemester    Semester @relation("ScheduleNextSemester", fields: [nextSemesterUuid], references: [uuid], onDelete: Cascade)

  @@unique([currentSemesterUuid, nextSemesterUuid])
  @@map("move_out_schedule")
}

model Semester {
  uuid      String   @id @default(uuid())
  year      Int
  season    Season
  createdAt DateTime @default(now()) @map("created_at")

  currentSemesterTargetInfo InspectionTargetInfo[] @relation("CurrentSemester")
  nextSemesterTargetInfo    InspectionTargetInfo[] @relation("NextSemester")
  currentSemesterSchedules  MoveOutSchedule[]      @relation("ScheduleCurrentSemester")
  nextSemesterSchedules     MoveOutSchedule[]      @relation("ScheduleNextSemester")

  @@unique([year, season])
  @@map("semester")
}

model InspectionTargetInfo {
  uuid                String   @id @default(uuid())
  currentSemesterUuid String   @map("current_semester_uuid")
  nextSemesterUuid    String   @map("next_semester_uuid")
  houseName           String   @map("house_name")
  roomNumber          String   @map("room_number")
  studentName         String   @map("student_name")
  admissionYear       String   @map("admission_year")
  inspectionCount     Int      @default(0) @map("inspection_count")
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @default(now()) @updatedAt @map("updated_at")

  currentSemester       Semester               @relation("CurrentSemester", fields: [currentSemesterUuid], references: [uuid], onDelete: Cascade)
  nextSemester          Semester               @relation("NextSemester", fields: [nextSemesterUuid], references: [uuid], onDelete: Cascade)
  inspectionApplication InspectionApplication?

  @@unique([currentSemesterUuid, nextSemesterUuid, admissionYear, studentName], name: "inspection_target_with_specific_semester")
  @@index([currentSemesterUuid])
  @@index([nextSemesterUuid])
  @@index([currentSemesterUuid, nextSemesterUuid, houseName, roomNumber])
  @@index([admissionYear, studentName])
  @@map("inspection_target")
}

model InspectionSlot {
  uuid                String   @id @default(uuid())
  scheduleUuid        String   @map("schedule_uuid")
  startTime           DateTime @map("start_time")
  endTime             DateTime @map("end_time")
  maleCapacity        Int      @default(0) @map("male_capacity")
  femaleCapacity      Int      @default(0) @map("female_capacity")
  maleReservedCount   Int      @default(0) @map("male_reserved_count")
  femaleReservedCount Int      @default(0) @map("female_reserved_count")

  inspectionApplications InspectionApplication[]
  inspectors             InspectorAvailableSlot[]
  schedule               MoveOutSchedule          @relation(fields: [scheduleUuid], references: [uuid], onDelete: Cascade)

  @@index([scheduleUuid, startTime])
  @@map("inspection_slot")
}

model InspectionApplication {
  uuid                     String   @id @default(uuid())
  userUuid                 String   @map("user_uuid")
  inspectionTargetInfoUuid String   @map("inspection_target_info_uuid")
  inspectionSlotUuid       String   @map("inspection_slot_uuid")
  isPassed                 Boolean? @map("is_passed")
  createdAt                DateTime @default(now()) @map("created_at")
  updatedAt                DateTime @default(now()) @updatedAt @map("updated_at")
  inspectorUuid            String   @map("inspector_uuid")

  user                 User                 @relation(fields: [userUuid], references: [uuid], onDelete: Cascade)
  inspectionTargetInfo InspectionTargetInfo @relation(fields: [inspectionTargetInfoUuid], references: [uuid], onDelete: Cascade)
  inspectionSlot       InspectionSlot       @relation(fields: [inspectionSlotUuid], references: [uuid], onDelete: Cascade)
  inspector            Inspector            @relation(fields: [inspectorUuid], references: [uuid])

  @@unique([inspectionTargetInfoUuid])
  @@index([inspectionSlotUuid])
  @@map("inspection_application")
}

model InspectorAvailableSlot {
  inspectorUuid      String @map("inspector_uuid")
  inspectionSlotUuid String @map("inspection_slot_uuid")

  inspector      Inspector      @relation(fields: [inspectorUuid], references: [uuid], onDelete: Cascade)
  inspectionSlot InspectionSlot @relation(fields: [inspectionSlotUuid], references: [uuid], onDelete: Cascade)

  @@id([inspectorUuid, inspectionSlotUuid])
  @@map("inspector_available_slot")
}

model Inspector {
  uuid          String @id @default(uuid())
  name          String
  email         String @unique
  studentNumber String @map("student_number")
  gender        Gender

  availableSlots InspectorAvailableSlot[]
  applications   InspectionApplication[]

  @@map("inspector")
}
